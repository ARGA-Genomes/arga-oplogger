@base <http://arga.org.au/schemas/fields/>.

@prefix :      <http://arga.org.au/schemas/mapping/>.
@prefix worms: <http://arga.org.au/schemas/maps/worms/>.
@prefix ncbi:  <http://arga.org.au/schemas/maps/ncbi/>.


worms:
{
  <canonical_name>                   :same worms:scientificName.
  <scientific_name_authorship>       :same worms:scientificNameAuthorship.
  <scientific_name>                  :combines (<canonical_name> <scientific_name_authorship>).
  <taxon_rank>                       :same worms:taxonRank.
  <taxonomic_status>                 :same worms:taxonomicStatus.
  <nomenclatural_code>               :same worms:nomenclaturalCode.
  <last_updated>                     :same worms:modified.
  <taxon_id>                         :same worms:taxonID.

  <accepted_name> :links <scientific_name>;
                  :via   worms:acceptedNameUsageId.
}


ncbi:
{
  <canonical_name>                   :same ncbi:scientific_name.
  <scientific_name_authorship>       :same ncbi:authority.
  <scientific_name>                  :combines (<canonical_name> <scientific_name_authorship>).
  <vernacular_name>   :same ncbi:genbank_common_name.
  <equivalent_name> :same ncbi:equivalent_name.
  <taxon_rank>                       :same ncbi:rank.
  <nomenclatural_code>               :same ncbi:nomenclatural_code.
  <taxon_id>                         :same ncbi:tax_id.

  <parent_taxon> :same <scientific_name>;
                 :where << <taxon_id> :is ncbi:parent_tax_id >>.
}
